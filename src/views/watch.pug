extends base.pug

block content
  div#videoContainer
    video(src="/"+video.fileUrl, width="500px", height="300px")
    div#videoControls
      button#play Play 
      button#mute Mute 
      input(type="range", value="0.5", step="0.1", min="0", max="1")#volume
      div
        span#currentTime 00:00:00
        span  / 
        span#totalTime
      div
        input(type="range", value="0", step="1", min="0")#timeline
      div 
        button#fullScreenBtn Enter Full Screen

  //-
    div
      p=video.description
      small=video.createdAt 
    div 
      small uploaded by 
        a(href=`/users/${video.owner._id}`)=video.owner.username
    if String(loggedInUser._id) === String(video.owner._id)
      div
        a(href=`${video.id}/edit`) Edit Video &rarr;
        br
        a(href=`${video.id}/delete`) Delete Video &rarr;

block scripts 
  script(src="/static/js/videoPlayer.js")