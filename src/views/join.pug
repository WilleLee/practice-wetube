extends base

block content
  if errorMessage 
    span=errorMessage
  form(method="POST")
    input(name="username", placeholder="Name", type="text", required)
    input(name="nickname", placeholder="Nickname", type="text", required)
    input(name="email", placeholder="email", type="email", required)
    input(name="password", placeholder="password", type="password", required)
    input(name="password2", placeholder="verify password", type="password", required)
    input(name="location", placeholder="Location", type="text", required)
    input(type="submit", value="Join Now")
  div.auth-switch
    span Already have an account? 
    a(href="/login") Log in now &rarr;