extends ../base
include ../mixins/video

block content 
  div.profile-data 
    if user.socialOnly && user.avatarUrl
      img(src=user.avatarUrl).avatar
    else if !user.socialOnly && user.avatarUrl
      img(src="/"+user.avatarUrl).avatar
    h3=user.username
  div.video-grid
    each video in user.videos
      +video(video)
    else
      li sorry not found